{
  "env": {
    "doc": "The applicaton environment.",
    "format": ["production", "development", "test"],
    "default": "development",
    "env": "NODE_ENV"
  },
  "ip": {
    "doc": "The IP address to bind.",
    "format": "ipaddress",
    "default": "127.0.0.1",
    "env": "IP_ADDRESS"
  },
  "port": {
    "doc": "The port to bind.",
    "format": "port",
    "default": 3000,
    "env": "PORT"
  },
  "overrideconfig": {
      "doc": "The path to over ride file",
      "format": "path",
      "default": "config/override.json"
  }
}
